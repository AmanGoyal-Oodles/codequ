<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/mar_20"
    android:paddingLeft="@dimen/mar_40"
    android:paddingRight="@dimen/mar_40"
    android:paddingTop="@dimen/mar_30">

    <EditText
        android:id="@+id/register_email_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:textSize="@dimen/textSize12sp" />

    <View
        android:id="@+id/register_email_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_0_2"
        android:layout_below="@+id/register_email_et"
        android:layout_marginTop="@dimen/mar_10"
        android:background="@color/Gray" />

    <LinearLayout
        android:id="@+id/register_pass_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_email_view"
        android:layout_marginTop="@dimen/mar_30"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/register_pass_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="New Password"
                android:inputType="textPassword"
                android:textSize="@dimen/textSize12sp" />

            <View
                android:id="@+id/register_pass_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mar_0_2"
                android:layout_marginTop="@dimen/mar_10"
                android:background="@color/Gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mar_30"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/register_confirm_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Confirm"
                android:inputType="textPassword"
                android:textSize="@dimen/textSize12sp" />

            <View
                android:id="@+id/register_confirm_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mar_0_2"
                android:layout_marginTop="@dimen/mar_10"
                android:background="@color/Gray" />

        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/register_phone_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_pass_layout"
        android:layout_marginTop="@dimen/mar_30"
        android:background="@null"
        android:hint="10 digit Phone Number"
        android:inputType="phone"
        android:textSize="@dimen/textSize12sp" />

    <View
        android:id="@+id/register_phone_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_0_2"
        android:layout_below="@+id/register_phone_et"
        android:layout_marginTop="@dimen/mar_10"
        android:background="@color/Gray" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_40"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/register_phone_view"
        android:layout_marginTop="29dp"
        android:background="@drawable/button_background_red"
        android:text="Register Now"
        android:textAllCaps="false"
        android:textColor="@color/White"
        android:textSize="@dimen/textSize14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_btn"
        android:layout_marginTop="@dimen/mar_20"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/register_ar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already registered?"
            android:textColor="@color/Gray"
            android:textSize="@dimen/textSize12sp" />

        <TextView
            android:id="@+id/register_signin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in Now"
            android:textColor="@color/OrangeRed"
            android:textSize="@dimen/textSize12sp" />
    </LinearLayout>

</RelativeLayout>