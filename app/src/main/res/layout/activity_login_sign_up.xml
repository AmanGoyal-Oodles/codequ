<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.example.user.codechef.activities.LoginSignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mar_30"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/mar_150"
            android:layout_height="@dimen/mar_150"
            android:layout_gravity="center"
            android:src="@drawable/chef_logo"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mar_20"
        android:layout_marginLeft="@dimen/mar_30"
        android:layout_marginRight="@dimen/mar_30"
        android:layout_marginBottom="@dimen/mar_30"
        android:background="@color/White"
        app:cardCornerRadius="@dimen/mar_8">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frame_login">

        </FrameLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
